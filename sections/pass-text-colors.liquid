<style>
  html, body{
    color: {{ section.settings.password_text_color }} !important;
  }
  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6, .newsletter__wrapper, .field__input, p, .p, .underlined-link, svg, label, span, .icon-padlock{
    color: {{ section.settings.password_text_color }} !important;
  }
  .icon-padlock{
    fill: {{ section.settings.password_text_color }} !important;
  }

  button#Subscribe, .password-button{
    color: {{ section.settings.sub_button_color }};
    background: {{ section.settings.sub_button_bg_color }};
  }
  .password-modal__content {
    background-color: {{ section.settings.pass_modal_bg_color }} !important;
    }
</style>

